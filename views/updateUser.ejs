<%-include("./partials/header")%>
  <div class=" updateUserForm rounded-[20px] w-[500px] h-[80%]  absolute left-[50%] top-[15%] -translate-x-[50%] pt-2 pl-2 pr-2 ">
    <h1 class="h-[10%] rounded-[10px]   text-white flex font-semibold justify-center items-center text-3xl mb-2 w-[100%]">Update User Form</h1>
  <form class="pt-5 h-[90%]  flex flex-col items-center   " action="/profile/updateUser/<%=user._id%>" method="post">
    <input class="  border-black   h-[8%] mb-8 rounded-[10px] w-[80%] pl-5" type="text" name="username" value="<%=user.username%>" id="">
    <input class="  border-black   h-[8%] mb-8 rounded-[10px] w-[80%] pl-5" type="email" name="email" value="<%=user.email%>" id="">
    <input class="  border-black   h-[8%] mb-8 rounded-[10px] w-[80%] pl-5" type="text" name="address" value="<%=user.address%>" id="">
    
    <div class="   h-[8%]  mb-8 text-[17px]  rounded-[10px] w-[80%] flex pl-5 justify-center gap-10 ">
      <div  class="text-white    border-white border-[1px] hover:bg-white hover:border-white hover:text-black   rounded-[5px] w-max flex items-center  pl-5 font-semibold pr-5">
        <input class="" type="radio" name="role" id="seller" value="seller"> <label class="ml-1 mb-[2px]" for="seller">Seller</label>
      </div>

      <div class=" text-white    border-white border-[1px] hover:bg-white hover:border-white hover:text-black  rounded-[5px] w-max flex items-center pl-5 pr-5 font-semibold">
        <input class="" type="radio" name="role" id="buyer" value="buyer"> <label class="ml-1 mb-[2px]" for="buyer">Buyer</label>
      </div>
    </div>
    
    <h2 class="text-white">If you want to Change Password?<br> <a class=" ml-[8vh] text-blue-500" href="/profile/resetPassword">Reset Password</a> </h2>
    <button class=" pt-3  pl-[2.5vmax] pr-[2.5vmax] pb-3 text-white    border-white border-[1px] hover:bg-white hover:border-white hover:text-black   mt-10 rounded-[10px]   font-semibold">Update</button>
  </form>
  </div>
<%-include("./partials/footer")%>